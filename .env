# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=postgres
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/notification_platform

# Server Configuration
SERVER_PORT=8080

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VIRTUAL_HOST=/
RABBITMQ_QUEUES=events

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_TYPE=minute
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_ENABLED=true

# Dead Letter Queue Configuration
DLQ_MAX_RETRIES=3
DLQ_CLEANUP_DAYS=30
DLQ_AUTO_RETRY=false

# Data Cleanup Configuration
DATA_CLEANUP_ENABLED=true
DATA_RETENTION_MONTHS=6

# External Provider Configuration (Optional)
# Email Provider
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@example.com

# SMS Provider (Twilio)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notification Providers
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=your-apns-bundle-id
APNS_KEY_PATH=/path/to/apns-key.p8

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord Configuration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Microsoft Teams Configuration
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL
