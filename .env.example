# ============================================
# Notification Platform - Environment Variables
# ============================================
# Copy this file to .env and update values as needed
# cp .env.example .env

# ============================================
# Database Configuration
# ============================================
DB_USERNAME=postgres
DB_PASSWORD=postgres
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/notification_platform

# ============================================
# Kafka Configuration
# ============================================
# For backend running on host machine, use localhost:9093
# For backend running in Docker, use kafka:9092
KAFKA_BOOTSTRAP_SERVERS=localhost:9093

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VIRTUAL_HOST=/
RABBITMQ_QUEUES=events

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8080

# ============================================
# Application Configuration (Optional)
# ============================================
# Rate Limiting
RATE_LIMIT_WINDOW_TYPE=minute
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_ENABLED=true

# Dead Letter Queue
DLQ_MAX_RETRIES=3
DLQ_CLEANUP_DAYS=30
DLQ_AUTO_RETRY=false

# Data Cleanup
DATA_CLEANUP_ENABLED=true
DATA_RETENTION_MONTHS=6

# ============================================
# Logging (Optional)
# ============================================
# LOGGING_LEVEL_ROOT=INFO
# LOGGING_LEVEL_COM_NOTIFICATIONPLATFORM=DEBUG
